#!/bin/sh

# Arguments passed from CMake:
# @X265_LIBRARY_8@
# @X265_LIBRARY_10@
# @X265_LIBRARY_HDR10_PLUS@
# @X265_LIBRARY_12@
# @X265_LIBRARY@

set -e

echo "[x265-repack] Combining static libraries (upstream method)..."

# Upstream-style repack using ar -M
ar -M <<EOF
CREATE @X265_LIBRARY@
ADDLIB @X265_LIBRARY_8@
ADDLIB @X265_LIBRARY_10@
ADDLIB @X265_LIBRARY_12@
SAVE
END
EOF

echo "[x265-repack] Done."
