execute_process(
	COMMAND @ENV_CMAKE_COMMAND@ -Wno-dev -S @_CMAKE_SRC_DIR@ -B @_CMAKE_BUILD_DIR@ -G Ninja
		-DCMAKE_BUILD_TYPE=@CMAKE_BUILD_TYPE@
		-DCMAKE_INSTALL_PREFIX=@_CMAKE_INSTALL_PREFIX@
		@_CMAKE_OPTIONS@
	WORKING_DIRECTORY "@_CMAKE_BUILD_DIR@"
	RESULT_VARIABLE CMAKE_RESULT
	OUTPUT_VARIABLE CMAKE_OUT
	ERROR_VARIABLE CMAKE_ERROR
)
if(CMAKE_OUT AND CMAKE_VERBOSE)
	message(STATUS "${CMAKE_OUT}")
endif()
if(CMAKE_ERROR)
	message(WARNING "${CMAKE_ERROR}")
endif()
if(NOT CMAKE_RESULT EQUAL 0)
	message(FATAL_ERROR "Configuring @_CMAKE_COMPONENT@ failed (exit ${CMAKE_RESULT}). See output above for details.")
endif()

message(STATUS "Configured @_CMAKE_COMPONENT@")